<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/friendRequestItem_usernameField"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/friendRequestItem_acceptButton"
        android:layout_alignBottom="@id/friendRequestItem_declineButton"
        android:layout_toStartOf="@id/friendRequestItem_cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/friendRequestItem_acceptButton"
        android:text="@string/friendRequestItem_accept"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/friendRequestItem_declineButton"
        android:text="@string/friendRequestItem_decline"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/friendRequestItem_acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/friendRequestItem_cancelButton"
        android:text="@string/friendRequestItem_cancel"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/friendRequestItem_usernameField"
        android:layout_alignBottom="@id/friendRequestItem_usernameField"/>

</RelativeLayout>