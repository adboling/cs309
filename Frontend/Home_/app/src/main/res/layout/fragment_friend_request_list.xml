<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Friends.FriendRequestListFragment">
    <TextView
        android:id="@+id/friendRequest_title"
        android:text="@string/friendRequest_title"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/friendRequest_belowTitle"
        android:layout_centerInParent="true"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_below="@id/friendRequest_title" />
    <Button
        android:id="@+id/friendRequest_incomingButton"
        android:text="@string/friendRequest_incoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendRequest_belowTitle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/friendRequest_belowTitle"/>
    <Button
        android:id="@+id/friendRequest_outgoingButton"
        android:text="@string/friendRequest_outgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendRequest_belowTitle"
        android:layout_toEndOf="@id/friendRequest_belowTitle"
        android:layout_alignParentEnd="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/friendRequest_incomingList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendRequest_incomingButton"
        android:layout_alignParentBottom="true">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/friendRequest_outgoingList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendRequest_incomingButton"
        android:layout_alignParentBottom="true">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>